<div class="body">
  <div class="pagewrap">
    <div class="card">
      <div class="titlediv">
        <form class="card-body signup-form">
          <div class="form-group">
            <label class="form-label nametext">Name :</label>
            <input class="form-input" type="text" id="name-signup" />
          </div>
          <div class="signupGrid">
            <div class="form-group">
              <label class="form-label usernametext">Username :</label>
              <input class="form-input" type="text" id="username-signup" />
            </div>
            <div class="form-group">
              <label class="form-label passwordtext">Password :</label>
              <input class="form-input" type="password" id="password-signup" />
            </div>
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn btns signupBtn" type="submit">Sign Up<i
                class='fas fa-gamepad'></i></button>
          </div>
        </form>
        <a href="/login">Login Instead</a>
      </div>
    </div>
  </div>
</div>
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<script src="/js/signup.js"></script>